<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/tv_lineNumber"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textColor="#C0C0C0"
        android:textSize="15sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_lineNumber"
        android:layout_alignBottom="@id/tv_lineNumber"
        android:layout_alignTop="@id/tv_lineNumber"
   			>
        
    <TextView
        android:id="@+id/tv_songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
         />

    <TextView
        android:id="@+id/tv_artistName"
        android:layout_below="@id/tv_songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#C0C0C0"
        android:textSize="13sp"
        android:paddingLeft="30dp"
         />
        
        
    </RelativeLayout>

</RelativeLayout>

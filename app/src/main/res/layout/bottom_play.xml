<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
        android:id="@+id/local_miniplayer_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
                android:layout_alignParentBottom="true"
        android:background="?attr/colorPrimaryDark"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/local_miniplayer_album"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/default_album_s" />

        <ImageButton
            android:id="@+id/local_miniplayer_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/local_miniplayer_next"

            android:layout_alignParentTop="true"

            android:layout_alignRight="@+id/local_miniplayer_next"
            android:layout_marginEnd="41dp"
            android:layout_marginRight="41dp"
            android:background="@null"
            android:padding="15dp"
            android:src="@drawable/pause_normal" />

        <ImageButton
            android:id="@+id/local_miniplayer_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:layout_alignRight="@+id/local_miniplayer_play"

            android:layout_marginRight="48dp"
            android:background="@null"
            android:padding="15dp"
            android:src="@mipmap/player_last" />

        <!--Left="@+id/local_miniplayer_bg_play"
                    android:layout_toLeftOf="@id/local_miniplayer_play"

        android:layout_toLeftOf="@id/local_miniplayer_play"-->
        <ImageButton
            android:id="@+id/local_miniplayer_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:padding="8dp"
            android:src="@mipmap/player_next" />

        <TextView
            android:id="@+id/local_miniplayer_song"
            android:layout_width="190sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/local_miniplayer_album"
            android:singleLine="true"
            android:text="换地方会扩散到将恢复快捷"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/local_miniplayer_artist"
            android:layout_width="190sp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/local_miniplayer_song"
            android:layout_below="@id/local_miniplayer_song"
            android:layout_toRightOf="@id/local_miniplayer_album"
            android:singleLine="true"
            android:text="@string/artist_default"
            android:textColor="@color/lightgrey"
            android:textSize="12sp" />


</RelativeLayout>
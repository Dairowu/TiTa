<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!--ListView是用来显示左边滑进去的列表-->

    <ListView
        android:id="@+id/leftNavList"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#fff">

    </ListView>

    <RelativeLayout
        android:id="@+id/show_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg">
        <!--viewpager用来显示歌词和专辑切换列表-->

        <android.support.v4.view.ViewPager
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/relativeLayout"
            ></android.support.v4.view.ViewPager>

        <!--RelativeLayout主要用来显示播放器下面的时间文本和seekbar-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_above="@+id/relativeLayout"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            >

        </TextView>
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/begin_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="#ffff" />

            <SeekBar
                android:id="@+id/show_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/end_time"
                android:layout_toRightOf="@+id/begin_time"
                android:layout_toStartOf="@+id/end_time"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:thumb="@drawable/dot"
                android:thumbOffset="0dp" />

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="05:00"
                android:textColor="#ffff" />
        </RelativeLayout>

        <!--显示控制的按钮-->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ffbd7e"
                android:src="@drawable/btn_repeat_nomal" />

            <ImageButton
                android:id="@+id/pervious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00ffbd7e"
                android:src="@drawable/previous_normal" />

            <ImageButton
                android:id="@+id/pause_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00ffbd7e"
                android:src="@drawable/pause_normal" />

            <ImageButton
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00ffbd7e"
                android:src="@drawable/next_normal" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00ffbd7e"
                android:src="@drawable/btn_list" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
